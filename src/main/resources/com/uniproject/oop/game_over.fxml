<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uniproject.oop.StartScreenController">
   <children>
   <ImageView fx:id="imageView" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image backgroundLoading="true" url="@assets/icon.png" />
            </image>
        </ImageView>
      <Label id="font" stylesheets="@stylesheets/start_screen.css" text="GAME OVER :(" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font></Label>
      <Button id ="font" stylesheets="@stylesheets/start_screen.css" fx:id="newGameButton" onAction="#newGame" text="New Game" />
      <Button id ="font" stylesheets="@stylesheets/start_screen.css" fx:id="exitGameButton" onAction="#exitGame" text="Exit Game" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
